{
  "name": "hmpps-component-dependencies",
  "version": "1.0.0",
  "description": "",
  "main": "index.js",
  "scripts": {
    "test": "npm run lint && npm run typecheck && jest --runInBand",
    "start": "ts-node -r dotenv/config src/run",
    "run-examples": "ts-node -r dotenv/config src/examples",
    "lint": "eslint . --cache --max-warnings 0",
    "lint-fix": "eslint . --cache --max-warnings 0 --fix",
    "typecheck": "tsc",
    "prepare": "hmpps-precommit-hooks-prepare",
    "build": "rm -rf dist && tsc",
    "security_audit": "npx audit-ci --config audit-ci.json",
    "precommit:secrets": "gitleaks git --pre-commit --redact --staged --verbose --config .gitleaks/config.toml",
    "precommit:lint": "node_modules/.bin/lint-staged",
    "precommit:verify": "npm run typecheck && npm test",
    "setup": "npm ci && hmpps-npm-script-run-allowlist"
  },
  "author": "Andrew Lee",
  "license": "MIT",
  "lint-staged": {
    "*.{ts,js,css}": [
      "prettier --write",
      "eslint --fix"
    ],
    "*.json": [
      "prettier --write"
    ]
  },
  "engines": {
    "node": "^24",
    "npm": "^11"
  },
  "jest": {
    "transform": {
      "^.+\\.tsx?$": [
        "ts-jest"
      ]
    },
    "collectCoverageFrom": [
      "server/**/*.{ts,js,jsx,mjs}"
    ],
    "testMatch": [
      "<rootDir>/(src)/**/?(*.)(cy|test).{ts,js,jsx,mjs}"
    ],
    "testEnvironment": "node",
    "reporters": [
      "default",
      [
        "jest-junit",
        {
          "outputDirectory": "test_results/jest/"
        }
      ],
      [
        "./node_modules/jest-html-reporter",
        {
          "outputPath": "test_results/unit-test-reports.html"
        }
      ]
    ],
    "moduleFileExtensions": [
      "web.js",
      "js",
      "json",
      "node",
      "ts"
    ]
  },
  "devDependencies": {
    "@ministryofjustice/eslint-config-hmpps": "^1.0.3",
    "@ministryofjustice/hmpps-npm-script-allowlist": "0.0.3",
    "@ministryofjustice/hmpps-precommit-hooks": "^1.0.2",
    "@tsconfig/node24": "^24.0.4",
    "@types/jest": "^30.0.0",
    "@types/superagent": "^8.1.9",
    "audit-ci": "^7.1.0",
    "dotenv": "^17.3.1",
    "jest": "^30.2.0",
    "jest-html-reporter": "^4.3.0",
    "jest-junit": "^16.0.0",
    "lint-staged": "^16.2.7",
    "prettier": "^3.8.1",
    "ts-jest": "^29.4.6",
    "typescript": "^5.8.3"
  },
  "dependencies": {
    "@ministryofjustice/hmpps-rest-client": "^1.0.1",
    "@types/bunyan": "^1.8.11",
    "@types/bunyan-format": "^0.2.9",
    "applicationinsights": "^2.9.8",
    "bunyan": "^1.8.15",
    "bunyan-format": "^0.2.1",
    "connect-redis": "^9.0.0",
    "redis": "^5.11.0",
    "superagent": "^10.3.0",
    "ts-node": "^10.9.2"
  }
}
